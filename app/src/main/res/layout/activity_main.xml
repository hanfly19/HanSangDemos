<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.linearlistview.LinearListView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />


        </HorizontalScrollView>

        <Button
            android:id="@+id/toolbar_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="toolbar test"

            />

        <Button
            android:id="@+id/eventbus_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="eventbus test" />

        <Button
            android:id="@+id/recycle_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="recycleview test" />

        <Button
            android:id="@+id/animation_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="animation test" />

        <Button
            android:id="@+id/swipe_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="swipeback test" />

        <Button
            android:id="@+id/empty_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="emptyView test" />

        <Button
            android:id="@+id/dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="dialogFragment_test" />

        <Button
            android:id="@+id/photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="headPhoto_test" />

        <Button
            android:id="@+id/disklrucache_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="diskLruCache_test" />

        <Button
            android:id="@+id/diqiniu_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="qiniu_test" />
        <Button
            android:id="@+id/fwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="fwd_test" />

        <Button
            android:id="@+id/swipe1_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="swipe_test" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_bg">

            <ImageView
                android:id="@+id/photo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </RelativeLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:numStars="5"
             />
    </LinearLayout>
</ScrollView>
